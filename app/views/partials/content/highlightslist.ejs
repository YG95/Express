<article class="highlightslist <% if (pageID == 'home') { %>jumbotron hidden-xs<% } %>">
  <div class="container">
    <div class="row">
        <% highlights.forEach(function(item) {%>
        <div class="<% if (pageID == 'home') { %>col-sm-6 col-md-4 col-lg-3 text-center<% } else { %>col-md-6 <% } %>">
          <h3 class="highlightslist-title"><%= item.site %></h3>
          <h5 class="highlightslist-name">with <a href="/highlights/<%= item.shortname %>"><%= item.site %></a></h5>
          <div class="highlightslist-info">
            <a href="/highlights/<%= item.id %>">

              <% if (pageID == 'home') { %>
                <img class="highlightslist-img img-circle" src="<%= item.image %>" alt="Photo of <%= item.name %>" width="250"></a>
              <% } %>

              <% if (pageID == 'highlightList') { %>
                <img class="highlightslist-img img-circle pull-left" src="<%= item.image %>" alt="Photo of <%= item.site %>" width="300"></a>
              <% } %>
            </a>

            <% if (pageID == 'highlightDetail') { %>
              <img class="highlightslist-img img-responsive pull-left" src="<%= item.image %>" alt="Photo of <%= item.site %>"
              width="800"></a>
              <script>
              var mapCenter = {lat: <%= item.lat%>, lng: <%= item.long%>};
              function initMap() {
                    var map1 = new google.maps.Map(document.getElementById('map'), { // where you put the map
                      center: mapCenter,
                      zoom: 14
                    });

                    var marker = new google.maps.Marker({
                        position: mapCenter,
                        map: map1,
                        title: "blank"
                      });
                    };

                  </script>
              <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDTORTYbqyGk4mC8nBlMQYQshpkXltDumU&callback=initMap"
                async defer></script>
            <% } %>
          </a>

            <% if (pageID !== 'home') { %>
              <% if (pageID == 'highlightList') { %>
                <%= item.category %>
                <iframe src="<%= item.videoEmbed %>"></iframe>
              <% } else { %>
                <%- item.info %>
                <div class="container">
                  <div class="row">
                    <div class="col-md-6">
                <iframe src="<%= item.videoEmbed %>"></iframe>
              </div>
                <div class="col-md-6">
                <div id="map"></div>
              </div>
            </div>
              </div>
              <% } %>
            <% } %>
          </div>
        </div>
        <%  }); %>
    </div><!-- row -->
  </div><!-- container -->
</article>
</html>
